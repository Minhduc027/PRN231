@model KFM.Data.Models.FoodRequirement

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Food Requirement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodId" />
            <div class="form-group">
                <label asp-for="KoiId" class="control-label"></label>
                <select asp-for="KoiId" class="form-control" asp-items="ViewBag.KoiId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DevelopmentStage" class="control-label"></label>
                <input asp-for="DevelopmentStage" class="form-control" type="date" />
                <span asp-validation-for="DevelopmentStage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredAmount" class="control-label"></label>
                <input asp-for="RequiredAmount" class="form-control" />
                <span asp-validation-for="RequiredAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
